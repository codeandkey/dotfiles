# applications

super + Return
	alacritty

super + q
	firefox

super + {Escape, r}
	rofi -theme Monokai -show run -location 1 -xoffset 37 -yoffset 37 -font "Fira Code 18"

super + v
    /opt/cisco/anyconnect/bin/vpnui

# mouse fix

super + m
    fixmouse

# wm navigation

super + {h, j, k, l}
	bspc node -f {west, south, north, east}

super + shift + {h, j, k, l}
	bspc node -p {west, south, north, east}

# desktop navigation

super + {1-9,0}
	bspc desktop -f ^{1-9,10}

# window control

super + shift + q
	bspc node -c

super + shift + {1-9,0}
	bspc node -d ^{1-9,10}

super + alt + {h, j, k, l}
	bspc node @parent -r {-64,+64,-64,+64}

super + f
	bspc node -t '~fullscreen'

# wm control

super + shift + Escape
	bspc quit

# backlight control

XF86MonBrightnessDown
	xbacklight -dec 10

XF86MonBrightnessUp
	xbacklight -inc 10
