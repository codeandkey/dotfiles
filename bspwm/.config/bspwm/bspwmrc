#!/bin/sh
# codeandkey-dotfiles
# bspwmrc

# initialize desktops

if [ $(bspc query -m | wc -l) -eq 2 ]; then
	bspc monitor ^1 -d I II III IV V
	bspc monitor ^2 -d VI VII VIII IX X
else
	bspc monitor ^1 -d I II III IV V VI VII VIII IX X
fi

# follow pointer
bspc config focus_follows_pointer true

# preselection color
bspc config presel_feedback_color "#000000"

# minimal borders
bspc config border_width 1

# no gaps!
bspc config window_gap 0
